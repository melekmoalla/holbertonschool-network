#!/usr/bin/env bash
#Write a Bash script that pings an IP address passed as an argument.
#!/usr/bin/env bash

for input in "$@" 

    do  
        ping=$(ping -c 1 $@ | grep bytes | wc -l)
        if [ $ping -gt 1 ];  then 
            echo "L'address IP ping"
        else
            echo "L'adresse IP ne ping pas"
        fi  
    done
